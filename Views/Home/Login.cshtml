@model AndresChaves.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

<h2 class="text-center text-black-50 mb-4">Inicio de sesion</h2>

<!-- Mensajes de validación general -->
<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>

<!-- Formulario de Login -->
@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
    <div class="form-container">
        <div class="form-group">
            <!-- Campo para el Nombre de Usuario -->
            <label for="Usuario" class="text-black-50">@Html.DisplayNameFor(model => model.Usuario)</label>
            @Html.TextBoxFor(model => model.Usuario, new { @class = "form-control custom-input", placeholder = "Ingrese su usuario" })
            @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <!-- Campo para la Contraseña -->
            <label for="Contraseña" class="text-black-50">@Html.DisplayNameFor(model => model.Contraseña)</label>
            @Html.PasswordFor(model => model.Contraseña, new { @class = "form-control custom-input", placeholder = "Ingrese su contraseña" })
            @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
        </div>

        <!-- Botón para enviar el formulario -->
        <button type="submit" class="btn btn-primary btn-block mt-4">Ingresar</button>
    </div>
}

<div class="text-center mt-3">
    <form action="@Url.Action("Register", "Home")" method="get">
    </form>
</div>

@*@section Styles*@ 
    <style>
        /* Contenedor principal */
        .form-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            background-color: #ffffff;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border: 1px solid #ddd;
        }

        /* Estilos de los inputs */
        .custom-input {
            border-radius: 5px;
            border: 1px solid #ccc;
            margin-bottom: 15px;
            padding: 12px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .custom-input:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.5);
        }

        /* Botón de submit */
        .btn-block {
            width: 100%;
            padding: 12px;
            font-size: 18px;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }

        /* Estilos del enlace de registro */
        .text-center a {
            color: #007bff;
            text-decoration: none;
            font-size: 14px;
            padding-top: 10px;
            display: inline-block;
        }

        .text-center a:hover {
            text-decoration: underline;
        }

        /* Espaciado y texto */
        .text-black-50 {
            color: rgba(0, 0, 0, 0.5);
        }

        .mt-4 {
            margin-top: 20px;
        }

        .mb-4 {
            margin-bottom: 20px;
        }

        .form-group label {
            font-weight: bold;
        }
    </style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
