@model AndresChaves.Models.Personas

@{
    ViewBag.Title = "Crear Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Crear Persona</h2>

<div class="container">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4">Registrar Nueva Persona</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="mb-3">
                @Html.LabelFor(model => model.Nombres, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Apellidos, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Num_identificacion, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Num_identificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Num_identificacion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Tipo_identificacion, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Tipo_identificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_identificacion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Fecha_creacion, htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Fecha_creacion, new { htmlAttributes = new { @class = "form-control", id = "Fecha_creacion" } })
                @Html.ValidationMessageFor(model => model.Fecha_creacion, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-end">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        

        <div class="d-flex justify-content-end mt-4">
            <a href="@Url.Action("Index", "Personas")" class="btn btn-primary">Volver a la Lista</a>
        </div>
   

}
