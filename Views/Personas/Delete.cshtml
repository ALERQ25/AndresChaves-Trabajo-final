@model AndresChaves.Models.Personas

@{
    ViewBag.Title = "Eliminar Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-danger mb-4">Eliminar Persona</h2>

<div class="container">
    <div class="card shadow-sm p-4">
        <h4 class="text-danger mb-4">¿Estás seguro de que deseas eliminar esta persona?</h4>

        <div class="mb-4">
            <h5 class="text-secondary">Detalles de la Persona</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Nombres)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombres)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Apellidos)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellidos)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Num_identificacion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Num_identificacion)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Email)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Tipo_identificacion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tipo_identificacion)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Fecha_creacion)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Fecha_creacion)</dd>
            </dl>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="d-flex justify-content-between">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
</div>
