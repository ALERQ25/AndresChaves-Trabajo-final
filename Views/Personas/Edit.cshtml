@model AndresChaves.Models.Personas

@{
    ViewBag.Title = "Editar Persona";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center text-primary mb-4">Editar Persona</h2>

<div class="container">
    <div class="card shadow-sm p-4">
        <h4 class="mb-4 text-secondary">Actualizar Información de la Persona</h4>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id_Personas)

            <div class="mb-3">
                @Html.LabelFor(model => model.Nombres, "Nombres", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Nombres, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombres, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Apellidos, "Apellidos", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Apellidos, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Apellidos, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Num_identificacion, "Número de Identificación", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Num_identificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Num_identificacion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Email, "Correo Electrónico", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Tipo_identificacion, "Tipo de Identificación", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Tipo_identificacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_identificacion, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(model => model.Fecha_creacion, "Fecha de Creación", htmlAttributes: new { @class = "form-label" })
                @Html.EditorFor(model => model.Fecha_creacion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Fecha_creacion, "", new { @class = "text-danger" })
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                <a href="@Url.Action("Index", "Personas")" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
