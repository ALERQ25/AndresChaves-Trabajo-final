@model AndresChaves.Models.Usuarios

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center mb-4">Crear Usuario</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="card shadow-sm p-4">
            <h4 class="mb-3">Información del Usuario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Usuario, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Usuario, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Contraseña, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Contraseña, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Contraseña, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row mb-3">
                @Html.LabelFor(model => model.Fecha_creacion, htmlAttributes: new { @class = "col-sm-3 col-form-label" })
                <div class="col-sm-9">
                    @Html.EditorFor(model => model.Fecha_creacion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fecha_creacion, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="d-flex justify-content-end mt-4">
                <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary me-3">Volver a la lista</a>
                <button type="submit" class="btn btn-primary">Crear Usuario</button>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        // Establecer la fecha y hora actual al campo Fecha_creacion
        $(document).ready(function () {
            var currentDate = new Date();
            var formattedDate = currentDate.toISOString().substring(0, 19); // Formato: "YYYY-MM-DDTHH:MM:SS"
            $("#Fecha_creacion").val(formattedDate);
        });
    </script>
}
